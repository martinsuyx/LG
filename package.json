{
  "scripts": {
    "check": "redocly lint openapi/openapi.yaml && redocly bundle openapi/openapi.yaml -o openapi/bundle.yaml",
    "mock": "prism mock openapi/openapi.yaml --port 4010 --host 127.0.0.1 --cors",
    "sdk:ts": "openapi --input openapi/bundle.yaml --output sdk/ts --client fetch",
    "tokens:build": "style-dictionary build --config style-dictionary.config.cjs",
    "dev": "echo 'Use `pnpm --filter api dev` and `pnpm --filter admin-web dev` to run apps'",
    "lint": "eslint . --ext .ts,.tsx,.vue || true",
    "lint:design": "node scripts/lint-design.js || true",
    "test": "echo 'root test aggregator'",
    "test:e2e": "playwright test --config=tests/playwright.config.ts",
    "test:visual": "playwright test --config=tests/visual.config.ts",
    "ci": "pnpm run check && pnpm run sdk:ts && pnpm run tokens:build && pnpm -r build && pnpm run test:visual"
  },
  "devDependencies": {
    "@openapitools/openapi-generator-cli": "^2.8.0",
    "@playwright/test": "^1.48.0",
    "@redocly/cli": "^1.16.0",
    "@stoplight/prism-cli": "^5.8.0",
    "eslint": "^9.12.0",
    "openapi-typescript-codegen": "0.26.0",
    "style-dictionary": "^3.9.1"
  }
}
